


    
# Curl commands for REST Server resource KaruturiReddy
# Post
curl -X POST -H "Content-Type: application/json" \
-d '{"Reddy": "sample string"}' \
http://localhost:1223/v1/karuturireddies

# Get
curl -X GET -H "Content-Type: application/json" \
http://localhost:1223/v1/karuturireddies

# Put
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Reddy": "sample string"}' \
http://localhost:1223/v1/karuturireddies/123

# Put
### wrong id passed in param
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Reddy": "sample string"}' \
http://localhost:1223/v1/karuturireddies/1234

# Get  (retrieve specific KaruturiReddy)
curl -X GET -H "Content-Type: application/json" \
http://localhost:1223/v1/karuturireddies/123

# Delete
curl -X DELETE -H "Content-Type: application/json" \
http://localhost:1223/v1/karuturireddies/123

    

# when mysql throws error about server connection, fire below commands
